                android:tag="ROW_01">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ROW_01_FRAGMENT_2" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/idRowTow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idRowOne"
                android:background="#73000fff"
