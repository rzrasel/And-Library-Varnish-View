                        android:layout_height="match_parent"
                        android:text="ROW_02" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ROW_02" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ROW_02" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="ROW_02" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/idRowThree"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@+id/idRowTow"
                android:background="#73000000"
                android:tag="ROW_03">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ROW_03" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/idColumnRight"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:layout_alignRight="@+id/idColumnLeft"
            android:tag="COLUMN_RIGHT">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#73000000"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:background="#73000000" />

                <Button
                    android:id="@+id/sysBtnRegi"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:background="#73ff0000"
                    android:text="+" />
            </LinearLayout>
        </RelativeLayout>
